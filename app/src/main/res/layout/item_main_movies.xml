<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgMainMovie"
        android:layout_width="0dp"
        android:layout_height="164dp"
        tools:ignore="MissingConstraints"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@drawable/background_button_12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTextTitel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sf_bold_700"
        android:textSize="14dp"
        android:text="ldkfvoevoimoemv"
        android:textColor="@color/grey_900"
        app:layout_constraintStart_toStartOf="@id/imgMainMovie"
        app:layout_constraintTop_toBottomOf="@id/imgMainMovie" />
    <TextView
        android:id="@+id/tvTextDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="2"
        android:ellipsize="end"
        android:fontFamily="@font/sf_regular"
        android:layout_marginTop="8dp"
        android:textSize="12dp"
        android:text="nioufv9rnu9ervn98rvererververeer reefv 9erh9 hf9rh9f 8rfae9r f98er98h 98h 98aehr 9r98a"
        android:textColor="@color/grey_400"
        app:layout_constraintTop_toBottomOf="@id/tvTextTitel"
        app:layout_constraintStart_toStartOf="@id/imgMainMovie"
        app:layout_constraintEnd_toEndOf="@id/imgMainMovie" />
    <TextView
        android:id="@+id/tvGener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:paddingVertical="6dp"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/sf_bold_700"
        android:textSize="12dp"
        android:text="lprv,prv,rrfvrvvr"
        android:background="@drawable/background_button_8dp_circle"
        android:backgroundTint="@color/primary_btn"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/imgMainMovie"
        app:layout_constraintTop_toTopOf="@id/imgMainMovie"/>


</androidx.constraintlayout.widget.ConstraintLayout>